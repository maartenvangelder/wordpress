{
  "name": "maartenvangelder/wordpress",
  "type": "project",
  "description": "A modern WordPress scaffold",
  "license": "BSD-3-Clause",
  "homepage": "https://maartenvangelder.nl/",
  "authors": [
    {
      "name": "Ramiro Hammen",
      "email": "ramiro@grrr.nl"
    },
    {
      "name": "Koen Schaft",
      "email": "koen@grrr.nl"
    },
    {
      "name": "Maarten van Gelder",
      "email": "mail@maartenvangelder.nl"
    }

  ],
  "config": {
    "preferred-install": "dist",
    "allow-plugins": {
      "roots/wordpress-core-installer": true,
      "wikimedia/composer-merge-plugin": true,
      "composer/installers": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^1.2.0",
    "vlucas/phpdotenv": "^5.5",
    "johnpbloch/wordpress": "^4.9.0",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "^6",    
    "roots/wp-password-bcrypt": "^1",
    "wikimedia/composer-merge-plugin": "^2",
    "roots/soil": "^4",
    "wpackagist-plugin/acf-content-analysis-for-yoast-seo": "^3.0",
    "wpackagist-plugin/w3-total-cache": "^2",
    "wpackagist-plugin/wordpress-seo": "^26.0",
    "wpackagist-plugin/classic-editor": "^1.6",
    "wpackagist-plugin/another-simple-image-optimizer": "^0.3.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "wp-cli/wp-cli": "^2.0",
    "wp-cli/core-command": "^2.0",
    "wp-cli/entity-command": "^2.0",
    "wp-cli/extension-command": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Verthe\\Root\\" : "lib/"
    }
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "web/app/themes/*/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": false,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    },
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-create-project-cmd": [
      "Verthe\\Root\\PostCreateProject::setup"
    ],
    "test": [
      "vendor/bin/phpcs"
    ]
  }
}
